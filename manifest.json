{
  "manifest_version": 3,
  "name": "CoopBoard Sender Info Collector",
  "version": "0.0.1",
  "description": "A browser extension to collect and display job contact information from the Laurier co-op board.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}